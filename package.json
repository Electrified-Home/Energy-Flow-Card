{
  "name": "energy-flow-card",
  "version": "1.0.0",
  "description": "Home Assistant Energy Flow Card",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "pnpm typecheck && pnpm lint && vite build",
    "build:debug": "pnpm typecheck && pnpm lint && vite build -- --debug-build",
    "dev": "vite",
    "preview": "vite preview",
    "test": "pnpm build &&vitest run",
    "lint": "eslint . --ext .ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.14.0",
    "jsdom": "^27.2.0",
    "serve": "^14.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "home-assistant",
    "custom-card",
    "energy",
    "flow"
  ],
  "author": "",
  "license": "MIT"
}
